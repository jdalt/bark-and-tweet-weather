<!DOCTYPE html>
<html>
  <head>
    <title>BarkAndTweet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if flash.any? %>
      <% flash.each do |type, msg| %>
        <div id="flash" class="alert alert-<%= type %>">
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <div id ="content">
      <%= yield %>
    </div>
  </body>
</html>
